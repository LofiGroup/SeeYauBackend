upstream backend {
    server seeyau_backend:8000;
}

server {
    listen 443 ssl;

    location / {
        proxy_pass https://backend;
    }

    location ~/.well-known/acme-challenge/ {
        root /var/www/certbot;
    }

    location /static/ {
        alias /static/;
    }
    server_name ${DOMAIN_NAME} www.${DOMAIN_NAME};
}

server {
    listen 80;
    server_name ${DOMAIN_NAME} www.${DOMAIN_NAME};

    return 301 https://$server_name$request_uri;
}
